<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="303dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="若性别信息有误的话，请联系 Heychat小助手修改哦～"
            android:textSize="17dp"
            android:layout_marginTop="18dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center_horizontal"
            android:textColor="@color/title_main_font_color"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/solid_f1_r16"
                android:text="再看看"
                android:textColor="@color/tv_848484"
                android:textSize="18dp"
                android:gravity="center"
                tools:visibility="visible"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/solid_bc_r16"
                android:text="知道了"
                android:textColor="@color/tv_242424"
                android:textSize="18dp"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>