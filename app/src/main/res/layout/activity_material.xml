<?xml version="1.0" encoding="utf-8"?>
<!--抽屉布局，放两个控件，一层为主控件，另一层为抽屉-->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.material.MaterialActivity"
    android:fitsSystemWindows="true">

<!--    这个就是主要布局，里面有很多material design风格的控件-->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

<!--        这就是一个LinearLayout,里面第一个控件必须是CollapsingToolbarLayout(实现折叠)，折叠下面还能随意放控件，按照vertical方式布局-->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

<!--            里面放两个子控件，第一个是大的，可折叠为第二个（必须是toolBar）,这个控件要有高度-->
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:collapsedTitleGravity="center"
                app:title="地方大幅度发"
                app:expandedTitleGravity="top|right"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">
                    <ImageView
                        android:id="@+id/backdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/bg_mao" />

                    <ImageView
                        android:id="@+id/test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="bottom|end"/>
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="#ADBE107E"
                app:tabMode="scrollable"
                style="@style/MyCustomTabLayout" />

        </android.support.design.widget.AppBarLayout>

<!--        下面必须要有一个滑动的控件（viewpager里面放recyclerview滑动）appbar_scrolling_view_behavior不能省-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

<!--        依附在某个控件上的悬浮按钮-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fb_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_discuss"
            app:layout_anchor="@id/collapsing_toolbar"
            app:layout_anchorGravity="bottom|right|end" />

<!--        这里通过FooterBehaviorAppBar实现底部滑进滑出的效果-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_behavior="com.dalongtech.testapplication.activity.material.FooterBehaviorAppBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义Behavior"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

<!--    一个列表，通常作为抽屉布局的第二层用-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nv_main_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/drawer_view" />

</android.support.v4.widget.DrawerLayout>

