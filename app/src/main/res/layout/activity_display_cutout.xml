<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dalongtech.testapplication.activity.DisplayCutoutActivity">

    <Button
        android:id="@+id/btn_check_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查是否支持"/>

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取相关信息"/>

    <Button
        android:id="@+id/btn_adapt_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="适配模式"/>

    <Button
        android:id="@+id/btn_safety_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安全区域"/>

    <Button
        android:id="@+id/btn_show_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示statusBar"/>

    <Button
        android:id="@+id/btn_hide_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏statusBar"/>

    <Button
        android:id="@+id/btn_add_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加窗口"/>



</LinearLayout>
