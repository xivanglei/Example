<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dalongtech.testapplication.activity.ThreadActivity">

    <Button
        android:id="@+id/btn_start_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启线程"/>

    <Button
        android:id="@+id/btn_restart_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="子线程再次开线程"/>

    <Button
        android:id="@+id/btn_main_start_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="主线程再开线程"/>

</LinearLayout>
