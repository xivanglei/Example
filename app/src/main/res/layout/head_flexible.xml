<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="20dp"
    android:background="@color/color_fcfcfc">

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="-127dp"
        android:src="@mipmap/bg_mao"
        tools:src="@mipmap/bg_mao"/>

    </FrameLayout>

    <!--我和返回键-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginStart="11dp">

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="32dp"
            android:layout_height="32dp"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="39dp"
            android:layout_height="32dp" />

    </FrameLayout>
    <!--我和返回键end-->

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        tools:src="@mipmap/ic_launcher"
        android:layout_marginBottom="-44dp"/>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:textColor="@color/tv_242424"
        android:textSize="15sp"
        android:gravity="center"
        tools:visibility="visible"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/iv_homepage_visitor"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/tv_setting"
        android:layout_marginEnd="38dp"
        android:layout_alignTop="@id/tv_setting"
        android:layout_marginTop="1.5dp" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        tools:text="Jio仙女唷🧚‍♀️～"
        android:textColor="@color/tv_242424"
        android:textSize="30sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tv_id_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_nickname"
        android:layout_below="@id/tv_nickname"
        android:layout_marginTop="3dp"
        tools:text="ID: 100 682 210"
        android:textSize="15sp"
        android:textColor="@color/tv_b1b1b1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_id_num"
        android:layout_alignStart="@id/tv_id_num">

        <FrameLayout
            android:id="@+id/fl_gender"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="13.5dp"
            android:layout_marginStart="6dp"
            tools:text="24岁"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/tv_b1b1b1"
            android:textSize="15sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="13.5dp"
            android:layout_marginStart="6dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:text="24岁"
            android:textColor="@color/tv_b1b1b1"
            android:textSize="15sp"
            android:gravity="center"/>

    </LinearLayout>


</FrameLayout>