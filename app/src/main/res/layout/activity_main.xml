<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/sv_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小测试"/>

        <Button
            android:id="@+id/btn_test_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入测试页"/>

        <Button
            android:id="@+id/btn_test_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragmentTest"/>

        <Button
            android:id="@+id/btn_get_address_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取手机通讯录列表"/>

        <Button
            android:id="@+id/btn_scroll_conflict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解决滑动冲突demo"/>

        <Button
            android:id="@+id/btn_imageview_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可放大缩小imageview"/>

        <Button
            android:id="@+id/btn_recycler_divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerView分割线"/>

        <Button
            android:id="@+id/btn_flexible_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下拉放大刷新布局"/>

        <Button
            android:id="@+id/btn_small_pinned_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通过itemDecorator固定内容中的head"/>

        <Button
            android:id="@+id/btn_bt_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="变态的recyclerView"/>

        <Button
            android:id="@+id/btn_custom_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义进度条"/>

        <Button
            android:id="@+id/btn_slide_close_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下滑关闭父布局"/>

        <Button
            android:id="@+id/btn_badge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置角标"/>

        <Button
            android:id="@+id/btn_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大图预览放大转场动画"/>

        <com.dalongtech.testapplication.widget.RoundedImageView
            android:id="@+id/iv_test_transform_animator"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_launcher"
            app:riv_corner_radius="10dp"/>

        <Button
            android:id="@+id/btn_voice_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音频播放"/>

        <Button
            android:id="@+id/btn_custom_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义键盘"/>

        <Button
            android:id="@+id/btn_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="统计事件"/>

        <Button
            android:id="@+id/btn_action_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动作队列"/>

        <Button
            android:id="@+id/btn_service_not_wait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务息屏后不停"/>
        <Button
            android:id="@+id/btn_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="字符串转二维码"/>

        <Button
            android:id="@+id/btn_reflect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="反射相关示例"/>

        <Button
            android:id="@+id/btn_display_cutout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="流海屏适配"/>

    </LinearLayout>

</ScrollView>